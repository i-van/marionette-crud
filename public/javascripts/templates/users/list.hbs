<h1>List of users</h1>
<table class="table table-striped">
    <tr>
        <th>id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Login</th>
        <th>Email</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Actions</th>
    </tr>
    {{#each items}}
    <tr>
        <td>{{_id}}</td>
        <td>{{login}}</td>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{email}}</td>
        <td>{{created}}</td>
        <td>{{updated}}</td>
        <td>
            <div class="btn-group btn-group-xs">
                <a href="#/edit/{{_id}}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span></a>
                <a href="#/remove/{{_id}}"
                   class="btn btn-default remove-confirmation"
                   data-title="Confirmation"
                   data-message="Do you really want to do that?"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
        </td>
    </tr>
    {{/each}}
</table>
<div class="table-pagination"></div>